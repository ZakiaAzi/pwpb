<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#87cefa"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="14dp"
    tools:context=".IsiBiodata">
    
    <EditText
        android:id="@+id/input_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama"
        android:textSize="16sp" />
    
    <EditText
        android:id="@+id/input_nis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NIS"
        android:inputType="number"
        android:textSize="16sp" />
    
    <EditText
        android:id="@+id/input_kelas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kelas"
        android:textSize="16sp" />
    
    <EditText
        android:id="@+id/input_umur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Usia"
        android:textSize="16sp" />
    
    <EditText
        android:id="@+id/input_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Alamat"
        android:textSize="16sp" />
    
    <Button
        android:id="@+id/simpan_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="simpan"
        android:textSize="16sp" />
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:background="#000000"
        android:orientation="horizontal" >
        
    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="2dp"
            android:layout_y="2dp"
            android:textColor="#ffffff"
            android:text="Nama :" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="2dp"
            android:layout_y="22dp"
            android:textColor="#ffffff"
            android:text="NIS :" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="3dp"
            android:layout_y="42dp"
            android:textColor="#ffffff"
            android:text="Kelas :" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="3dp"
            android:layout_y="61dp"
            android:textColor="#ffffff"
            android:text="Umur :" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="2dp"
            android:layout_y="80dp"
            android:textColor="#ffffff"
            android:text="Alamat :" />

        <TextView
            android:id="@+id/hasil_kelas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_x="74dp"
            android:layout_y="43dp"
            
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/hasil_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_x="74dp"
            android:layout_y="3dp"
            
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/hasil_nis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.45"
            android:layout_x="74dp"
            android:layout_y="23dp"
           
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/hasil_umur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_weight="1"
            android:layout_x="74dp"
            android:layout_y="60dp"
            
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/hasil_alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_x="74dp"
            android:layout_y="80dp"
           
            android:textColor="#ffffff" />

    </AbsoluteLayout>
        
    </LinearLayout>

</LinearLayout>